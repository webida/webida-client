{
    "name": "webida.ide.project-wizard",
    "description": "Project Wizard (Create Project in this Workspace)",
    "version": "0.1.1",
    "auther": "Hyun-Goo Kang",
    "requirement": "webida.common.workspace",
    "extensions": {
        "webida.common.workbench:menu": [
            {
                "location": "/&Project/",
                "wholeItems": {
                    "&Test": ["cmnd", {}],
                    "delim3": "---",
                    "&Build": ["cmnd", {"procedural": true}],
                    "Build Configurations": ["cmnd", {"procedural": true}],
                    "Rebuild": ["cmnd", {"procedural": true}],
                    "Clean": ["cmnd", {"procedural": true}],
                    "delim4": "---",
                    "Generate Signed Package": ["cmnd", {"procedural": true}],
                    "delim5": "---",
                    "&Export": ["cmnd", {}]
                }
            },
            {
                "location": "/&File/&New/",
                "wholeItems": {
                    "&Project": ["cmnd", {
                        "shortcut": {"keys": {"default": "Alt+N" }, "desc": "Create a project"},
                        "procedural": true
                    }]
                },
                "getViableItems": "getViableItemsForWorkbenchAtFile"
            }
        ],
        "webida.common.workspace:menu": [
            {
                "location": "/New/",
                "wholeItems": {
                    "Project": ["cmnd", {
                        "shortcut": {"keys": {"default": "Alt+N" }, "desc": "Create a project" },
                        "procedural": true
                    }]
                },
                "getViableItems": "getViableItemsForWorkspaceView"
            }
        ],
        "webida.common.command-system:commands": {
            "commands": [
                {
                    "id": "new-project",
                    "shortcut": {
                        "defaultKey": "Alt+N",
                        "description": "Create a project"
                    }
                }
            ]
        },
        "webida.common.command-system:menus": {
            "items": [
                {
                    "id": "file",
                    "name": "File",
                    "location": "/",
                    "type": "top-menu",
                    "items": [
                        {
                            "id": "new",
                            "name": "New",
                            "items": [
                                {
                                    "id": "new-project",
                                    "name": "Project",
                                    "commandId": "new-project"
                                }
                            ]
                        }
                    ]
                },
                {
                    "id": "new",
                    "name": "New",
                    "location": "/",
                    "type": "context-menu",
                    "items": [
                        {
                            "id": "new-project",
                            "name": "Project",
                            "commandId": "new-project"
                        }
                    ]
                }
            ]
        },
        "webida.ide.project-management.run:type": [{
            "id": "org.webida.run.mobile",
            "name": "Run As Mobile Application",
            "hidden": true
        }],
        "webida.ide.project-management.run:runner": [{
            "type": "org.webida.run.mobile",
            "module": "plugins/project-wizard/run-commands",
            "id": "org.webida.run.mobile.device.delegate",
            "name": "Run with Device",
            "run": "run"
        }]
    }
}

