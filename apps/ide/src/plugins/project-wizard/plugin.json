{
    "name": "project-wizard",
    "description": "Project Wizard (Create Project in this Workspace)",
    "version": "0.1.1",
    "auther": "Hyun-Goo Kang",
    "requirement": "workspace",
    "extensions": {

        "workbench:menu" : [
            {
                "location" : "/&Project/",
                "wholeItems" : {
                    "Run with Device" : [ "cmnd", {
                                            "procedural": true
                                        }],
                    "delim1" : "---",
                    "Debug" : [ "cmnd", {
                              }],
                    "Debug with" : [ "cmnd", {
                                       "procedural": true
                                   }],
                    "delim2" : "---",
                    "&Test" : [ "cmnd", {
                              }],
                    "delim3" : "---",
                    "&Build" : [ "cmnd", {
                                   "procedural": true
                               }],
                    "Build Configurations" : [ "cmnd", {
                                                 "procedural": true
                                             }],
                    "Rebuild" : [ "cmnd", {
                                    "procedural": true
                                }],
                    "Clean" : [ "cmnd", {
                                  "procedural": true
                              }],
                    "delim4" : "---",
                    "Generate Signed Package" : [ "cmnd", {
                                                    "procedural": true
                                                }],
                    "delim5" : "---",
                    "&Export" : [ "cmnd", {
                                }]
                }
            },
            {
                "location" : "/&File/&New/",
                "wholeItems" : {
                    "&Project" : [ "cmnd", { "shortcut" : { "keys" : { "default" : "Alt+N" },
                                                           "desc" : "Create a project" },
                                            "procedural" : true
                                           }]
                },
                "getViableItems" : "getViableItemsForWorkbenchAtFile"
            }
        ],

        "workspace:menu" : [
            {
                "location" : "/New/",
                "wholeItems" : {
                    "Project" : [ "cmnd", { "shortcut" : { "keys" : { "default" : "Alt+N" },
                                                          "desc" : "Create a project" },
                                            "procedural" : true
                                          }]
                },
                "getViableItems" : "getViableItemsForWorkspaceView"
            }
        ],

        "project-configurator:run-configuration-type" : [
            {
                "id" : "org.webida.run.mobile",
                "name" : "Run As Mobile Application"
            }
        ],
        "project-configurator:run-configuration" : [
            {
                "module" : "plugins/project-wizard/run-commands",
                "id" : "org.webida.run.mobile.device.delegate",
                "name" : "Run with Device",
                "type" : "org.webida.run.mobile",
                "handler" : "run"
            }
        ]
    }
}
